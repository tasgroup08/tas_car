<?xml version="1.0"?>

<launch>
<!-- same parameters as in move_base except when noted-->  
<master auto="start"/>
  <param name="/use_sim_time" value="false"/>
  
  <!-- Run map server  -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find tas)/launch/config/map_server/LSR_3.yaml"/>

   <!-- Run AMCL -->
  <node pkg="amcl" type="amcl" name="amcl" respawn="true">
	  <!--<remap from="odom" to="odom_combined"/>-->
	  <!-- ROS framework parameters -->
	  <param name="odom_frame_id" value="odom_combined"/>  <!--odom combined from robot pose ekf instead of odom from hector mapping -->
	  <param name="base_frame_id" value="base_footprint"/> 
	  <param name="global_frame_id" value="map"/>

	  <!-- Parameters for initial pose -->
	  <param name="initial_pose_x" value="15.00"/><!--initial pose is now in the middle of the map with a high covariance to reflect our prior knowledge (none)-->
	  <param name="initial_pose_y" value="15.00"/>
	  <param name="initial_pose_a" value="4.5"/>
	  <param name="initial_cov_xx" value="45"/>
	  <param name="initial_cov_yy" value="45"/>
	  <param name="initial_cov_aa" value="10000"/>


	  <!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->
	  <!-- :::::::::::::::::::: amcl parameters: ::::::::::::::::::-->
	  <!-- ::: most are default values / non-default are marked :::-->
	  <!-- :::::::::::::::::::::::::::::::::::::::::::::::::::::::: -->

	  <!-- Filter parameters-->
	  <param name="min_particles" value="300"/>
	  <param name="max_particles" value="5000"/>
	  <param name="kld_err" value="0.01"/>
	  <param name="kld_z" value="0.99"/>
	  <param name="update_min_d" value="0.2"/>
	  <param name="update_min_a" value="0.5"/>
	  <param name="resample_interval" value="2"/>
	  <param name="transform_tolerance" value="0.1"/>
	  <param name="recovery_alpha_slow" value="0.0"/>
	  <param name="recovery_alpha_fast" value="0.0"/>
 	  <!--<param name="recovery_alpha_slow" value="0.001"/>
	  <param name="recovery_alpha_fast" value="0.1"/>-->
	  <param name="gui_publish_rate" value="10.0"/>

	  <!-- Laser model parameters-->
	  <param name="laser_min_range" value="0.01"/>	
	  <param name="laser_max_range" value="15.0"/><!-- functions better than true max range of 30m (hallway length) -->
	  <param name="laser_max_beams" value="60"/><!--after extensive testing deemed to be optimal for localisation-->

	  <param name="laser_z_hit" value="0.95"/>
	  <param name="laser_z_short" value="0.1"/>
	  <param name="laser_z_max" value="0.05"/>
	  <param name="laser_z_rand" value="0.05"/>
	  <param name="laser_sigma_hit" value="0.2"/>
	  <param name="laser_lambda_short" value="0.1"/>
	  <param name="laser_likelihood_max_dist" value="2.0"/>
	  <param name="laser_model_type" value="beam"/><!-- changed to beam measurement model since laser is sufficiently accurate and the laser likelihood model is best for very noisy measurements-->

	  <!-- Odometry model parameters-->
	  <param name="odom_model_type" value="diff"/>  <!--functions better than diff_corrected even though formula in src seems incorect-->
	  <param name="odom_alpha1" value="1.0"/>
	  <param name="odom_alpha2" value="0.2"/>
	  <param name="odom_alpha3" value="1.0"/>
	  <param name="odom_alpha4" value="0.5"/>




  </node>

  <!-- Original Move Base-->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base_node" output="screen">
    <rosparam file="$(find tas)/launch/config/move_base/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find tas)/launch/config/move_base/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find tas)/launch/config/move_base/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find tas)/launch/config/move_base/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find tas)/launch/config/move_base/base_local_planner_params.yaml" command="load" />
  </node>

  <!-- Run trajectory control -->
  <node pkg = "tas_autonomous_control" type="tas_autonomous_control_node" name="tas_autonomous_control_node" output="screen"/>


</launch>
