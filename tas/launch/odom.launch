<?xml version="1.0"?>

<launch>
  <master auto="start"/>
  <param name="/use_sim_time" value="false"/>

  <!--(Static) transformation for relation between laser frame and base_link frame 40hz -->
  <node pkg="tf" type="static_transform_publisher" name="base_link_to_laser" args="0.28 0.0 0.18 0.0 0.0 0.0 /base_link /laser 40" />
  <node pkg="tf" type="static_transform_publisher" name="scanmatch_to_base" args="-0.28 0.0 -0.18 0.0 0.0 0.0 /scanmatcher_frame /base_link 40" />


  <!-- hector mapping -->
  <node pkg="hector_mapping2" type="hector_mapping" name="hector_mapping" output="screen">
  	<param name="scan_topic" value="scan" />
  	<param name="base_frame" value="base_link" />
  	<param name="odom_frame" value="base_link"/>
  	<param name="map_frame" value="odom"/> 
  	<param name="output_timing" value="false"/>
  	<param name="use_tf_scan_transformation" value="true"/>
  	<param name="use_tf_pose_start_estimate" value="false"/>
  	<param name="map_pub_period" value="1.0"/>
  	<param name="laser_max_dist" value = "15.0"/><!--changed since hallways are about this long-->
  	<param name="laser_min_dist" value = "0.01"/>
  	<param name="laser_z_min_value" value = "-0.3"/>
  	<param name="update_factor_free" value="0.3"/>
  	<param name="map_resolution" value="0.05"/> 
  	<param name="map_size" value="1024"/>
  	<param name="map_start_x" value="0.5"/>
  	<param name="map_start_y" value="0.5"/>
  	<param name="map_multi_res_levels" value="1"/>
	<param name="use_tf_pose_start_estimate" value="false"/>
	<param name="pub_map_odom_transform" value="false"/>
	<param name="pub_map_scanmatch_transform" value="true"/> 
        <param name="pub_odometry" value="false"/>
 	<remap from="map" to="hector_map" />
	<remap from="initialpose" to="hector_initial"/>
  </node>


  <!-- hector map saving used to create better map -->

 <!-- <node pkg="hector_geotiff" type="geotiff_node" name="hector_geotiff" output="screen">	
	<remap from="map" to="/dynamic_map" />
	<param name="map_file_path" type="string" value="/home/tas_group_08/hector_geotiff_maps" />
	<param name="map_file_base_name" type="string" value="hector_slam_map" />

	<param name="geotiff_save_period" type="double" value="60.0" />

	<param name="draw_background_checkerboard" type="bool" value="false" />
	<param name="draw_free_space_grid" type="bool" value="false" />
  </node>-->


</launch>
